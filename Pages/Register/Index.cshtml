@page

<br />
<h2 class="text-info">Register</h2>
<br />

<div class="container" style="padding:30px;">
    <form method="post" onsubmit="mySubmitFunction(event)">
        <div class="form-group row">
            <div class="col-2">
                <label for="p-name">User Name</label>
            </div>
            <div class="col-4">
                <input type="text" for="Player.Name" class="form-control" onchange="validate(this)" />
            </div>
            <span id="p-name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label for="Player.Password">Password</label>
            </div>
            <div class="col-4">
                <input for="Player.Password" type="password" class="form-control" onchange="validate(this)" />
            </div>
            <span id="p-pwd" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2 offset-2">
                <input type="submit" value="Register" class="btn btn-primary form-control" />
            </div>
            <div class="col-2">
                <a asp-page="/Index" class="btn btn-success form-control">Back</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <script src="~/js/Register.js"></script>
}